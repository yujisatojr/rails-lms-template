<% title t('.page_title') %>
<div class="jumbotron mb-0">
  <div class="container">
    <div class="row justify-content-center text-center jumbotron-bg">
      <div class="col-md-10 col-lg-6 jumbotron-bg">
        <h1 class="display-5 jumbotron-bg"><%= t('.title') %></h1>
        <p class="lead jumbotron-bg"><%= t('.subtitle') %></p>
        <p class="lead jumbotron-bg">
          <div class="link-button button-mt jumbotron-bg"><%= link_to t('.button'), courses_path, class: "about-button" %></div>
        </p>
      </div>
    </div>
  </div>
</div>

<section id="sec-about" class="sec-about pt-5">
  <div class="container">
    <div class="row justify-content-center text-left">
      <div class="col-md-10 col-lg-8">
        <h2 class="h2 text-center"><%= t('.page_title') %></h2>
        <p><%= t('.content_1') %></p>
        <p><%= t('.content_2') %></p>
        <p><%= t('.content_3') %></p>
      </div>
    </div>
  </div>
</section>
