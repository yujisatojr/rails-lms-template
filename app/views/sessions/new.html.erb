<% title t('sessions.login_title') %>
<div class="container-parent-wrapper">
    <%= alert %>
    <div class="container">
        <div class="row py-5 mt-4 align-items-center">
            <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                <img src="https://app-data-vault.s3.us-west-2.amazonaws.com/img/code-development-monochromatic.png" alt="" class="img-fluid mb-3 d-none d-md-block">
                <h2><%= t('sessions.login_title') %></h2>
                <p class="font-italic text-muted mb-0">By logging in, you can access members-only courses and post comments.</p>
            </div>

            <div class="col-md-7 col-lg-6 ml-auto">
                <%= form_with(url: sessions_path, method: :post, local: true) do |form| %>
                    <div class="row">
                        <!-- Email Address -->
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-envelope text-muted"></i>
                                </span>
                            </div>
                            <%= form.email_field :email, label: t('sessions.email_label'), class: "form-control bg-white border-left-0 border-md", id: "email", placeholder: t('sessions.email_label') %>
                        </div>
                        
                        <!-- Password -->
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-lock text-muted"></i>
                                </span>
                            </div>
                            <%= form.password_field :password, label: t('sessions.password_label'), class: "form-control bg-white border-left-0 border-md", placeholder: t('sessions.password_label') %>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group col-lg-12 mx-auto mb-0">
                            <%= form.submit t('sessions.login_button_text'), class: 'btn btn-outline-dark btn-block py-2' %>
                        </div>

                        <!-- Divider Text -->
                        <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                            <div class="border-bottom w-100 ml-5"></div>
                            <span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
                            <div class="border-bottom w-100 mr-5"></div>
                        </div>

                        <!-- Already Registered -->
                        <div class="text-center w-100">
                            <p class="text-muted font-weight-bold"><%= t('sessions.already_registered_text') %> <a href="<%= signup_path %>" class="text-primary ml-2">create an account</a></p>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>