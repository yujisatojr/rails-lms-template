<% title "My Page" %>
<div class="container-parent-wrapper">
  <div class="container-user">
    <div class="main-body">
      <div class="row gutters-sm mobile-design-user">

        <div class="col-md-4 mb-3 mobile-design-user">
          <div>
            <div class="card-user-user-user-user-body">
              <div class="d-flex flex-column align-items-center text-center">
                <%= image_tag "https://app-data-vault.s3.us-west-2.amazonaws.com/img/user-circle-icon.png", alt: "user icon", class: "rounded-circle", width: "150px", id: "profile-img" %>
                <div class="mt-3">
                  <h4><%= @user.username %></h4>
                  <p class="text-secondary mb-1"><%= @user.occupation %></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8 user-detail mobile-design-user">
          <div class="card-user margin-bottom">
            <div class="card-user-user-user-user-user">
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                  <p>Name</p><span><%= @user.lastname %><%= @user.firstname %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                  <p>Username</p><span><%= @user.username %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                  <p>Email Address</p><span><%= @user.email %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                  <p>Account Creation Date</p><span><%= @user.created_at.strftime("%Y-%m-%d") %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
