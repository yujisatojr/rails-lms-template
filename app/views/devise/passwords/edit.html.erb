<% title t('devise.passwords.edit.change_password_title') %>
<div class="container-parent-wrapper">
    <div class="container">
        <div class="row py-5 mt-4 align-items-center">
            <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                <img src="https://app-data-vault.s3.us-west-2.amazonaws.com/img/code-development-monochromatic.png" alt="reset password" class="img-fluid mb-3 d-none d-md-block">
                <h2><%= t('devise.passwords.edit.change_password_title') %></h2>
                <p class="font-italic text-muted mb-0"><%= t('devise.passwords.edit.change_password_instruction') %></p>
            </div>

            <div class="col-md-7 col-lg-6 ml-auto">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    <%= f.hidden_field :reset_password_token %>
                    <div class="row">
                        <div class="input-group col-lg-6 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-lock text-muted"></i>
                                </span>
                            </div>
                            <%= f.password_field :password, label: t('devise.passwords.edit.password_label'), class: "form-control bg-white border-left-0 border-md", placeholder: t('devise.passwords.edit.password_placeholder') %>
                        </div>

                        <div class="input-group col-lg-6 mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white px-4 border-md border-right-0">
                                    <i class="fa fa-lock text-muted"></i>
                                </span>
                            </div>
                            <%= f.password_field :password_confirmation, label: t('devise.passwords.edit.confirm_password_label'), class: "form-control bg-white border-left-0 border-md", placeholder: t('devise.passwords.edit.confirm_password_placeholder') %>
                        </div>

                        <div class="form-group col-lg-12 mx-auto mb-0">
                            <%= f.submit t('devise.passwords.edit.change_password_button'), :class => 'btn btn-outline-dark btn-block py-2' %>
                        </div>

                        <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                            <div class="border-bottom w-100 ml-5"></div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
